<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SirieActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="370dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/def_79" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="366dp"
        android:layout_height="394dp"
        android:text="Сырьевой сектор (Materials) имеет дело с добычей и первичной переработкой полезных ископаемых — за исключением нефти и газа. Сюда входят компании, которые занимаются металлами, химическим и лесным производством, а их типичные продукты — удобрения, пластик, строительные материалы, бумага, стекло, алюминий. Стоимость продукции зависит от котировок на товарных биржах, поэтому акции сырьевых компаний используют как защитный актив — они защищают от инфляции."
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/button9"
        android:layout_width="173dp"
        android:layout_height="56dp"
        android:text="Назад"
        android:onClick="buttonSendClick8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>