<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="390dp"
        android:layout_height="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cae5f19642192bf96ebe85fc88a6b160" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="379dp"
        android:layout_height="214dp"
        android:text="Доброго времени суток, это приложение будет служить вам помощником в мире инвестиций. Будь вы профессионалом, новичком или человеком со средним опытом. Для новичков есть полезная ифнормация о инвестиционных продуктах. Также есть 3 уровня чтобы собрать вам портфель. Новичку, среднему и опытному инвестору будут подобраны портфели которые не оставят вас равнодушным, и будут радовать результатом! "
        android:textSize="7pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.27" />

    <Button
        android:id="@+id/button2"
        android:layout_width="265dp"
        android:layout_height="77dp"
        android:layout_marginBottom="44dp"
        android:text="Вперед!"
        android:onClick="buttonSendClick2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.769" />
</androidx.constraintlayout.widget.ConstraintLayout>